@model IEnumerable<Diary.Models.DayStory>

@{
    ViewBag.Title = "List";
    int counter = 1;
    
    //http://webdesign.tutsplus.com/tutorials/htmlcss-tutorials/stepping-out-with-bootstrap-from-twitter/
}

<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $('.linkBox').toggle(
           function () {
            var dateId = $(this).children(".sDate").html();
            $(this).next("div").show("fast");
            $(this).next(".subContent").load("/home/Details/" + dateId);
        }, function() {
            $(this).next("div").hide("slow");
      });

    
        $('.selectorClass').hover(function () {
	        $(this).stop().fadeTo('fast', 0.4);
	    }, function () {
	        $(this).stop().fadeTo('slow', 1);
	    });
    });
    
</script>
<div class="row-fluid show-grid">

    <div class="span7 mainContent">
        @foreach (var item in Model) {
            var divId = "content" + @counter;
            var itemId = @Html.DisplayFor(model => item.Day);
                <div class="selectorClass linkBox boxStyle"><span class="sImg"><img src="@Html.DisplayFor(model => item.Img)" class="tinyImg rounded-corners5" alt="" /></span> <span class="sDate">@Html.DisplayFor(model => item.Day)</span><span class="sHeader">, @Html.DisplayFor(model => item.Header), @counter</span></div>
                <div class="subContent rounded-corners10 mainwrapper" style="display:none;"></div>
            counter ++;
        }
    </div>
    <div class="span4 mainContent">
        @foreach (var item in Model) {
            var divId = "content" + @counter;
            var itemId = @Html.DisplayFor(model => item.Day);
                <div class="selectorClass linkBox boxStyle2"><span class="sImg"><img src="@Html.DisplayFor(model => item.Img)" class="tinyImg rounded-corners5" alt="" /></span> <span class="sDate">@Html.DisplayFor(model => item.Day)</span><span class="sHeader">, @Html.DisplayFor(model => item.Header), @counter</span></div>
                <div class="subContent rounded-corners10 mainwrapper" style="display:none;"></div>
            counter ++;
        }
    </div>
</div>