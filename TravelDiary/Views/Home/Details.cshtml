@model Diary.Models.DayStory
@{
    ViewBag.Title = "Details";
    Layout = null;
    
    var item = Model;
    var day = @Html.DisplayFor(model => item.Day);
}

<script language="javascript" type="text/javascript">
    $(document).ready(function () {

        $('.nyroModal').nyroModal();

        //clear form on focus
        var el = $('input[type=text], textarea');
        el.focus(function (e) {
            if (e.target.value == e.target.defaultValue)
                e.target.value = '';
        });
        el.blur(function (e) {
            if (e.target.value == '')
                e.target.value = e.target.defaultValue;
        });

    });
</script>

    <blockquote>
            @Html.Raw(HttpUtility.HtmlDecode(item.Text))
    </blockquote>

        <div class="images">
            @foreach (var img in item.Images)
            { 
                <a href="@Html.DisplayFor(modelItem => img.Name)" class="nyroModal" title="@Html.DisplayFor(modelItem => img.Comment)" rel="gal">
                    <img src="@Html.DisplayFor(modelItem => img.Name)" alt="@Html.DisplayFor(modelItem => img.Comment)" title="@Html.DisplayFor(modelItem => img.Comment)" class="thumb" /></a>
            }
        </div>
        <p></p>
        <h4>Kommentarer</h4>
            @foreach (var cmt in item.Comments)
            { 
                <div class="comments subContent">                    
                    <blockquote>@Html.Raw(HttpUtility.HtmlDecode(cmt.Text))            
                    @Html.DisplayFor(modelItem => cmt.DateStamp)
                    </blockquote>
                </div>        
                <hr />
            }
            <div class="content-addcomment"> 
                    <form class="form-stacked" method="post" action="Reply/Save">
                    <table>
                        <tr>
                            <td><div class="clearfix"><div class="input"><textarea name="comment" style="min-height:30px;width:400px;" rows="1" cols="5" id="comment">Skriv kommentar...</textarea></div></div></td>
                            <td style="vertical-align:text-top;"><div class="clearfix"><input type="text" value="Ditt namn..." name="from" id="from" /></div></td>
                            <td style="vertical-align:text-top;"><div class="actions"><button class="btn">Spara</button></div></td>
                        </tr>
                    </table>
                    <input type="hidden" name="day" value="@day" />
                    </form>
            </div>